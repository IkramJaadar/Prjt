@model PaymentModel
<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>Payement</h2>
                        <p>Home <span class="ti-angle-double-right"></span>Payement</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb start-->

<link href="~/css/paiments.css" rel="stylesheet" asp-append-version="true" />

<!-- breadcrumb start-->
<section class="blog_area section_padding">
    <div class="container">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ServiceName" />
            <input type="hidden" asp-for="MntPy" />
            <div class="row">
                <!-- Left -->
                <div class="col-lg-9">
                    <div class="card position-sticky top-0 p-5">
                        <div class="accordion" id="accordionPayment">
                            <!-- Credit card -->
                            <div class="accordion-item mb-3">
                                <h4>Cartes Acceptées</h4>
                                <h2>
                                    <i class="fa fa-cc-visa" style="color:navy;"></i>
                                    <i class="fa fa-cc-mastercard" style="color:red;"></i>
                                </h2>
                                <br />
                                <div id="collapseCC" class="accordion-collapse collapse show" style="">
                                    <div class="accordion-body">
                                        <div class="mb-3">
                                            <label class="form-label">Numéro de Carte</label>
                                            <input type="text" class="form-control" asp-for="CardNumder" placeholder="0000-0000-0000-0000">
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Nom du Titulaire de Carte</label>
                                                    <input type="text" class="form-control" asp-for="NomCompletClient" placeholder="xxxxx xxxxx">
                                                </div>
                                            </div>
                                            <div class="col-lg-3">
                                                <div class="mb-3">
                                                    <label class="form-label">Date Expiration</label>
                                                    <input type="text" class="form-control" asp-for="DateExp" placeholder="MM/YYYY">
                                                </div>
                                            </div>
                                            <div class="col-lg-3">
                                                <div class="mb-3">
                                                    <label class="form-label">Code CVC </label>
                                                    <input type="password" asp-for="CVC" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Right -->
                <div class="col-lg-3">
                    <div class="card position-sticky top-0 rounded">
                        <div class="p-3 bg-light bg-opacity-10">
                            <h6 class="font-weight-bolder mb-3">Résumé de la commande</h6>
                            <div class="d-flex justify-content-between mb-1 small">
                                <span>Prix</span> <span><strong>@Model.MntPy Dh</strong></span>
                            </div>

                            <div class="d-flex justify-content-between mb-1 small">
                                <span>Service : <strong>@Model.ServiceName</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-4 small">
                                <span>TOTAL</span> <strong class="text-dark">@(Model.MntPy) Dh</strong>
                            </div>
                            <button type="submit" class="btn btn-primary w-100 mt-2">Effectuer un Paiment</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<script src="~/js/paiments.js"></script>