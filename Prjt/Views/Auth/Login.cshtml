@model Client
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>Authentification</h2>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="artist_part" id="Appointment">
    <div class="regervation_part section_padding mt-8">
        <div class="container">
            <div class="row justify-content-end">
                <div class="col-lg-7">
                    <div class="regervation_part_iner">
                        <form method="post">
                            <div class="form-row">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group col-md-12">
                                    <input type="email" class="form-control" asp-for="Email" placeholder="Email *">

                                </div>

                                <div class="form-group col-md-12">
                                    <input type="password" class="form-control" asp-for="Password" placeholder="Mot de Passe *">
                                </div>
                            </div>
                            <div class="regerv_btn">
                                <button type="submit" class="regerv_btn_iner">Se connecter </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>