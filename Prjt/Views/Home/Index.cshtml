<!--::review_part start::-->
@{
    List<Sliders> sliders = (List<Sliders>)ViewBag.listSliders;
}

<section class="blog_area">

    <!-- Carousel -->
    <div id="demo" class="carousel slide" data-bs-ride="carousel">
        <!-- Indicators/dots -->
        <div class="carousel-indicators">
            @{
                int i = 0;
            }
            @foreach (Sliders slider in sliders)
            {
                <button type="button" data-bs-target="#demo" data-bs-slide-to="@i" class="@(i==0?"active":"")"></button>
                i++;
            }
        </div>

        <!-- The slideshow/carousel -->
        <div class="carousel-inner">
            @{
                i = 0;
            }
            @foreach (Sliders slider in sliders)
            {
                <div class="carousel-item @(i==0?"active":"")">
                    <img src="https://localhost:7195/Media/SlideImg/@slider.Num" alt="" class="d-block" style="width:100%;height:600px !important;">
                    <div class="carousel-caption">
                        <h4 class="p-2 bg-dark rounded">@slider.Contenu</h4>
                    </div>
                </div>
                i++;
            }
        </div>

        <!-- Left and right controls/icons -->
        <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</section>
<!--::review_part end::-->
<!--::regervation_part start::-->
<section class="artist_part" id="Appointment">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-lg-6 col-sm-10">
            <div class="section_tittle">
                <img src="~/img/section_tittle_icon.png" alt="icon">
                <h2>Effectuez Rendez-Vous</h2>
            </div>
        </div>
    </div>
    <div class="regervation_part section_padding mt-8">
        <div class="container">
            <div class="row justify-content-end">
                <div class="col-lg-7">
                    <div class="regervation_part_iner">
                        <form method="post" action="/RendezVous/Add">
                            <div class="form-row">
                                @if (Context.Session.GetInt32("id") == null)
                                {
                                    <div class="form-group col-md-6">
                                        <input type="text" class="form-control" name="Nom" placeholder="Nom *">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="text" class="form-control" name="Prenom" placeholder="Prenom *">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="email" class="form-control" name="Email" placeholder="Email *">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="text" class="form-control" name="Telephone" placeholder="Telephone">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="text-light">Date Naissance</label>
                                        <input type="date" class="form-control" name="DateNaissance" placeholder="Date Naissance">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="password" class="form-control" name="Pwd" placeholder="Mot de Passe *">
                                    </div>
                                   
                                }
                                <div class="form-group col-md-6">
                                    <div class="input-group date">
                                        <input  type="date" name="DateRv" class="form-control" placeholder="Date *" />
                                    </div>
                                </div>
                                <div class="form-group time_icon col-md-6">
                                    <select class="form-control" name="Horraire" id="Select2">
                                        @{
                                            int j;
                                        }
                                        @for ( j = 9; j <= 22; j++)
                                        {
                                            <option >@j:00</option>
                                            <option >@j:30</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group col-md-12">
                                    <label class="text-light">Services</label>
                                    <select class="form-control" name="ServiceId" asp-items="@ViewBag.Services">
                                    </select>
                                </div>
                            </div>
                            <div class="regerv_btn">
                                <button type="submit" class="regerv_btn_iner">Passer Au Paiments </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--::regervation_part end::-->
    </div>
</section>

